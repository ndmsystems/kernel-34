menu "MTK USB drivers"
config RT3XXX_EHCI_OHCI
    bool "Ralink USB2 EHCI/OHCI controller support"
    depends on (RALINK_RT3883 || RALINK_RT3352 || RALINK_RT5350 || RALINK_RT6XXX_MP || RALINK_MT7620 || RALINK_MT7628)
    select USB_ARCH_HAS_OHCI
    select USB_ARCH_HAS_EHCI

config MTK_XHCI
    bool "MediaTek USB3/USB2/USB1.1 xHCI controller support"
    depends on (RALINK_MT7621 || ECONET_EN75XX_MP)
    select USB_ARCH_HAS_XHCI

config DWC_OTG
        depends on RALINK_RT3052
        tristate "Ralink DWC_OTG support"
        ---help---
          This driver supports Ralink DWC_OTG

choice
        prompt "USB Operation Mode"
        depends on DWC_OTG
        default DWC_OTG_HOST_ONLY

config DWC_OTG_HOST_ONLY
        bool "HOST ONLY MODE"
        depends on DWC_OTG

config DWC_OTG_DEVICE_ONLY
        bool "DEVICE ONLY MODE"
        depends on DWC_OTG

endchoice


config DWC_OTG_DEBUG
        bool "Enable debug mode"
        depends on DWC_OTG

endmenu

